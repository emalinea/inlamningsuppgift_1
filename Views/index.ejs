<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Users</title>
  <head>
  <link rel="stylesheet" href="/style.css">
</head>

</head>
<body>
  <h1 class="landing-header">Homepage</h1>

  <!-- Container fÃ¶r hela listdelen -->
  <div class="user-list-container">
    <h2 class="landing-subheader">All Users</h2>

    <!-- ðŸŸ¢ LÃ¤nk fÃ¶r att skapa en ny anvÃ¤ndare -->
    <a href="/create" class="create-user-link"> Create User</a>

    <!-- Lista Ã¶ver anvÃ¤ndare -->
    <ul class="user-list">
  <% data.forEach(user => { %>
    <li>
      <div class="user-info">
        <a href="/user?id=<%= user.id %>"><%= user.name %></a>
        <a href="/edit?id=<%= user.id %>" class="edit-link">Edit</a>
      </div>
      <form action="/users/<%= user.id %>/delete" method="POST" style="display:inline;">
        <button class="delete-button" onclick="return confirm('Ta bort <%= user.name %>?')">X</button>
      </form>
    </li>
  <% }) %>
</ul>


  <!-- JS-fil fÃ¶r eventuell funktionalitet -->
  <script src="/index.js"></script>
</body>
</html>


