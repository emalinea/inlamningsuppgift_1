<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit profile</title>
  <link rel="stylesheet" href="style.css" />
</head>

<body>
  <div class="edit-container">
    <h1 style="font-size: 24px; font-weight: 600; margin-bottom: 20px; color: #1d1d1f;">
      Edit User
    </h1>

    <form>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" />

      <label for="nickname">Nickname:</label>
      <input type="text" id="nickname" name="nickname" value="Exempeltext" />

      <label for="age">Age:</label>
      <input type="number" id="age" name="age" value="18" />

      <label for="bio">Bio:</label>
      <textarea id="bio" name="bio">A short description...</textarea>

      <button type="submit" class="save-button">Save</button>
      <a href="index.html" class="cancel-link">Cancel</a>
    </form>
  </div>

  <!-- âœ… JavaScript goes here, at the end -->
  <script>
    // Wait until the DOM is loaded
    document.addEventListener("DOMContentLoaded", () => {
      const urlParams = new URLSearchParams(window.location.search);
      const userId = urlParams.get('id');

      // Example data (replace with real backend later)
      const users = {
        1: { name: 'Michelle' },
        2: { name: 'Pallavi' },
        3: { name: 'Emma' },
        4: { name: 'Aleksandra' }
      };

      // Fill form
      if (userId && users[userId]) {
        document.getElementById('name').value = users[userId].name;
      } else {
        document.getElementById('name').value = 'Unknown User';
      }
    });
  </script>
</body>
</html>
